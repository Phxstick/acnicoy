<div id="frame">
  <div id="left-frame">
    <div id="kanji"
         class="kanji-info-link {{#if rare}}rare{{/if}}">{{kanji}}</div>
    <button id="added-label"
     {{#unless added}}style="display:none"{{/unless}}>Added</button>
    <button id="add-button"
     {{#if added}}style="display:none"{{/if}}>Add</button>
  </div>
  <div id="right-frame">
    <div id="meanings">{{meanings}}</div>
    <div id="details-bar"></div>
    {{#if onYomi.length}}
      <div class="yomi-frame">
        <span class="yomi-header">On</span>
        {{#each onYomi}}
          <span class="yomi">{{this}}</span>
        {{/each}}
      </div>
    {{/if}}
    {{#if kunYomi.length}}
      <div class="yomi-frame">
        <span class="yomi-header">Kun</span>
        {{#each kunYomi}}
          <span class="yomi">{{this}}</span>
        {{/each}}
      </div>
    {{/if}}
  </div>
</div>
