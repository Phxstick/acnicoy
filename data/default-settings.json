{
    "general": {
        "autoLaunchOnStartup": false,
        "showSrsNotifications": true,
        "srsNotificationsInterval": 900,
        "doRegularBackup": false,
        "regularBackupInterval": "604800"
    },
    "languages": {
        "default": ""
    },
    "test": {
        "useFlashcardMode": false,
        "makeContinuous": true,
        "skipEvaluationOnCorrect": false,
        "enableIgnoreShortcut": false,
        "showProgress": false,
        "showScore": false,
        "animate": true,
        "useSerifFont": false,
        "useBackgroundColors": false,
        "fontSize": "normal"
    },
    "design": {
        "animateSlidingPanels": true,
        "animatePopupStacks": true,
        "fadeSectionSwitching": true,
        "cursor": "default",
        "colorScheme": "default"
    },
    "kanjiOverview": {
        "splittingCriterion": "grade",
        "sortingCriterion": "alphabetical",
        "onlyMissing": false,
        "showJouyou": true,
        "showJinmeiyou": false,
        "showHyougai": false
    },
    "kanjiSearch": {
        "searchCriterion": "kanji"
    },
    "kanjiInfo": {
        "maximized": false
    },
    "srs": {
        "intervalModifier": "4 hours"
    },
    "add": {
        "separator": ","
    },
    "shortcuts": {
        "quit": "CmdOrCtrl+Q",
        "force-quit": "CmdOrCtrl+Escape",
        "close-sliding-panels": "Escape",
        "toggle-fullscreen": "F11",
        "refresh": "CmdOrCtrl+R",

        "add-word": "CmdOrCtrl+A",
        "add-kanji": "CmdOrCtrl+Shift+A",
        "open-test-section": "CmdOrCtrl+T",
        "open-dictionary": "CmdOrCtrl+F",
        "open-kanji-search": "CmdOrCtrl+Shift+F",
        "open-kanji-overview": "CmdOrCtrl+O",
        "open-home-section": "CmdOrCtrl+H",
        "open-stats-section": "CmdOrCtrl+P",
        "open-vocab-section": "CmdOrCtrl+W",
        "open-settings": "CmdOrCtrl+S",
        "open-help": "F1",

        "ignore-answer": "CmdOrCtrl+I"
    }
}
